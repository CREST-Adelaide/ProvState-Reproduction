
<% if !@patch.errors.empty? %>
   <div class = "alert alert-error">
      
      <ul>
         <% @patch.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
         <% end %>
      </ul>
      
   </div>
<% end %>

<div class = "container pt-3">

   <h1>Add Asset</h1>
	<%= bootstrap_form_for(@patch) do |f|%>
    <%= f.text_field :name %>
    <%= f.text_field :software_name %>
    <%= f.text_field :operating_system %>
    <%= f.text_field :install_command %>
    <%= f.file_field :attachment %>
    <%= f.submit "Save", class: "btn btn-primary" %>
	<%end%>
</div>