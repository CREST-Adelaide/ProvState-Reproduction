
<div class="row">
   <div class="col">
   <h1>Oracle Details</h1>
         <table class="table table-striped table-bordered table-hover">                          
           <tr>                          
             <th>Group <%= session[:group] %> </th>
           </tr>
              <tr>
               <th>Group Name:</th> 
                <td><%= $group_name %></td> 
              </tr>
              <tr>
               <th>Contract Name:</th> 
               <td><%= $oracle_name %></td>
              </tr>
              <tr>
               <th>Oracle Address:</th> 
               <td><%= $oracle_address%></td>  
              </tr> 
              <tr>
               <th>Total States:</th> 
               <td><%= $total_oracle_states %></td>  
              </tr>
              <tr>
               <th>Total Transitions:</th> 
               <td><%= $total_transitions%></td>  
              </tr>   

         </table> 
   </div>
   <div class="col">
   </div>
   <div class="col">
   </div>
</div>

<div class="row">
   <div class="col">
      <h1>States</h1>
      <table class="table table-striped table-bordered table-hover">               
           <% $oracle_states.each do |state| %> 
           <tr>
             <th><%= state %></th> 
           </tr>
         <% end %>              
      </table> 
        <h4>Add State</h4>
         <%= bootstrap_form_tag url:'/oracle_state', layout: :inline  do |f|%>
         <%= f.text_field :name, label: "Name"%><br>
         <%= f.submit %>
         <%end%>
         <h4>Delete State</h4>
         <%= bootstrap_form_tag url:'/delete_oracle_state', layout: :inline  do |f|%>
         <%= f.text_field :name, label: "Name"%><br>
         <%= f.submit %>
         <%end%>
   </div>
   <div class="col">
      <h1>Transitions</h1>
      <table class="table table-striped table-bordered table-hover"> 
           <tr>
             <th>ID</th> 
             <th>State 1</th> 
             <th>State 2</th> 
             <th>Authorised Role</th> 
           </tr>                      
           <% $oracle_transitions.each do |transition| %> 
           <tr>
             <td><%= transition[:id] %></td> 
             <td><%= transition[:state1] %></td> 
             <td><%= transition[:state2] %></td> 
             <td><%= transition[:role] %></td> 
           </tr>
         <% end %>              
      </table> 
      <h4>Add Transition</h4>
         <%= bootstrap_form_tag url:'/oracle_transition', layout: :inline  do |f|%>
         <%= f.text_field :first, label: "First State"%><br>
         <%= f.text_field :second, label: "Second State"%><br>
         <%= f.submit %>
         <%end%>
      <br>
      <h4>Delete Transition</h4>
         <%= bootstrap_form_tag url:'/delete_oracle_transition', layout: :inline  do |f|%>
         <%= f.text_field :id, label: "Delete Transition"%><br>
         <%= f.submit %>
         <%end%>
      <br>
      <h4>Add Role</h4>
         <%= bootstrap_form_tag url:'/oracle_role', layout: :inline  do |f|%>
         <%= f.text_field :id, label: "Transition ID"%><br>
         <%= f.text_field :name, label: "Role Name"%><br>
         <%= f.submit %>
         <%end%>
      <br>
   </div>
</div>
<br>
<a type="button" class="btn btn-success" href="/state">State</a>