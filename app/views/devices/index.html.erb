<h1> All Devices </h1>
<table class="table table-striped table-bordered table-hover">                     
  <tr>                          
    <th>Name</th>
    <th>ID</th>
    <th>Host</th>
    <th>OS</th>
    <th>Start Time</th>
    <th>End Time</th>
    <th>Created At</th>
    <th>Group id</th>
    <th>Actions</th>
  </tr>
	<% @devices.each do |device| %> 
	  <tr>
	    <td><%= device.name %></td> 
	    <td><%= device.id %></td>
	    <td><%= device.host %></td>  
	    <td><%= device.operating_system %></td>  
	    <td><%= device.start_time %></td> 
	    <td><%= device.end_time %></td>  
	    <td><%= device.created_at %></td>  
	    <td><%= device.group_id %></td> 
	    <td><%= button_to "View", device_path(device.id), method: :get%></td>  
	  </tr>
	<% end %>                  
</table> 


<div class="container pt-3">
	

</div>

